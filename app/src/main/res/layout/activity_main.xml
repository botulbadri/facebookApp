<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="student.facebook.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FACEBOOK!"
        android:id="@+id/tvLanguage"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You must log in first!"
        android:textSize="10pt"
        android:paddingTop="20pt"/>
    <ImageView
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:id="@+id/isLogo"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="0.03"
        android:paddingTop="25pt"
        android:gravity="center"
        android:layout_below="@+id/tvLanguage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get facebook for iphone and browse faster!"
        android:textSize="10pt"
        android:paddingTop="40pt"
        android:paddingLeft="25pt"
        android:layout_alignLeft="@id/isLogo"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etUserEmail"
        android:hint="Enter username or Email"
        android:textSize="25sp"
        android:layout_below="@+id/isLogo"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:textSize="25sp"
        android:layout_below="@+id/etUserEmail"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new account"
        android:id="@+id/btnSignUp1"
        android:textSize="25sp"
        android:paddingTop="4pt"
        android:layout_below="@+id/etPassword"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/btnSignUp"
        android:textSize="25sp"
        android:paddingTop="22pt"
        android:layout_below="@+id/btnSignUp1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and condition"
        android:textSize="10pt"
        android:paddingTop="65pt"
        android:paddingLeft="25pt"
        android:layout_below="@+id/btnSignUp1"/>










</RelativeLayout>
